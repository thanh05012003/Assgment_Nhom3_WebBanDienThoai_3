                <label asp-for="Anh" class="control-label"></label>
                <input type="file" name="file" />
                <span asp-validation-for="Anh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdHsx" class="control-label"></label>
                <select asp-for="IdHsx" asp-items="@ViewBag.IdHsx" class="form-control"></select>
                <span asp-validation-for="IdHsx" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
